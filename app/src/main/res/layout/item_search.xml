<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<ImageView
    android:id="@+id/imageViewSearchImage"
    android:layout_width="52dp"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/placeholder"
    android:contentDescription="@string/film_poster" />

<TextView
    android:id="@+id/textViewSearchTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/text_loading"
    app:layout_constraintStart_toEndOf="@+id/imageViewSearchImage"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textViewSearchEnTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    android:text="@string/text_loading"
    app:layout_constraintStart_toEndOf="@+id/imageViewSearchImage"
    app:layout_constraintTop_toBottomOf="@+id/textViewSearchTitle" />

<TextView
    android:id="@+id/textViewSearchReleaseDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="20dp"
    android:text="@string/text_loading"
    app:layout_constraintStart_toEndOf="@+id/textViewSearchEnTitle"
    app:layout_constraintTop_toBottomOf="@+id/textViewSearchTitle" />

<TextView
    android:id="@+id/textViewSearchRating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:text="@string/text_loading"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>